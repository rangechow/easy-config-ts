{
  "name": "easy-config-ts",
  "version": "1.0.0",
  "description": "Excel configuration management toolkit - convert Excel to Protobuf and YAML with 5-row header format",
  "license": "MIT",
  "author": "zhouyuan",
  "repository": {
    "type": "git",
    "url": "https://github.com/nickelzhou/easy-config-ts"
  },
  "keywords": [
    "excel",
    "protobuf",
    "yaml",
    "config",
    "game-config",
    "exceljs",
    "proto",
    "data-config"
  ],
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "dist/lib/main/index-lib.js",
  "module": "dist/lib/main/index-lib.js",
  "types": "dist/lib/main/index-lib.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/main/index-lib.d.ts",
      "import": "./dist/lib/main/index-lib.js"
    }
  },
  "files": [
    "dist/lib/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:lib": "tsc -p tsconfig.lib.json",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\" \"test/**/*.ts\"",
    "dist": "npm run build && electron-builder",
    "prepublishOnly": "npm run build:lib && npm run test"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "exceljs": "^4.4.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "antd": "^5.22.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.0.0",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.0"
  }
}
